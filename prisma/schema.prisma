// Notes System Models
model NoteCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#6B7280") // Color for category
  icon      String?  @default("üìù")      // Emoji or icon name
  isActive  Boolean  @default(true)
  sortOrder Int?     @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  notes     Note[]
  
  @@map("note_categories")
}

model Note {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  
  // Organization
  categoryId  String?
  category    NoteCategory? @relation(fields: [categoryId], references: [id])
  
  // Status and Priority
  isPinned    Boolean  @default(false)  // Pin important notes
  isArchived  Boolean  @default(false)  // Archive old notes
  priority    Priority @default(MEDIUM) // Reuse existing Priority enum
  
  // Metadata
  tags        String[] @default([])     // Array of tags for easy filtering
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastViewedAt DateTime? @default(now()) // Track when note was last opened
  
  // Relations
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  // Full-text search support (for PostgreSQL)
  @@index([title, content])
  @@map("notes")
}

// Enums
enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  AWAY
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  PAUSED
  CANCELLED
}

enum ProjectRole {
  OWNER
  MANAGER
  MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  COMPLETED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}